
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav class="breadcrumb">
    <i class="icon-home"></i> 首页<span class="c-gray en">&gt;</span>系统资料<span class="c-gray en">&gt;</span>配件管理
    <a class="btn radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新">
        <i class="icon-refresh"></i>
    </a>
</nav>

<div class="page-container ms-controller" ms-controller="ProductList">
    <div class="pd-5 search-bar">
        <form>
            <input type="text" ms-duplex="##Search.Code" class="input-text" placeholder="编码" />
            <input type="text" ms-duplex="##Search.Name" class="input-text ml-5" placeholder="名称" />
            <button type="submit" onclick="refreshListFn(); return false;" class="btn btn_normal ml-5">
                <i class="icon-search"></i> 搜索
            </button>
        </form>
    </div>

    <div class="cl pd-5">
        <span class="l">
            <a href="javascript:;" class="btn" onclick="addProductFn();">
                <i class="icon-plus"></i> 新增
            </a>
            <a href="javascript:;" class="btn" onclick="deleteSelectedRowFn();">
                <i class="icon-trash"></i> 删除
            </a>
        </span>
    </div>

    <div class="cl pd-5">
        <table class="table table-border table-bordered table-bg">
            <thead>
                <tr class="text-c">
                    <th width="25">
                        <input type="checkbox" name="checkAll">
                    </th>
                    <th width="25">序号</th>
                    <th width="90">编码</th>
                    <th width="90">名称</th>
                    <th width="150">当前库存</th>
                    <th width="150">安全库存</th>
                    <th width="90">销售单价</th>
                    <th width="90">成本价</th>
                    <th width="150">备注</th>
                    <th width="100">操作</th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-c" ms-for="($index, item) in ##List">
                    <td>
                        <input type="checkbox" class="row-check" ms-attr="{value:item.Id}" />
                    </td>
                    <td>{{ $index + 1}}</td>
                    <td>{{ item.Code }}</td>
                    <td>{{ item.Name }}</td>
                    <td>{{ item.Stock }}</td>
                    <td>{{ item.SafeStock }}</td>
                    <td>{{ item.SalePrice }}</td>
                    <td>{{ item.CostPrice }}</td>
                    <td>{{ item.Remark }}</td>
                    <td class="td-manage">
                        <a href="javascript:;" title="修改" ms-click="##editProductFn(item);">
                            <i class="icon-edit"></i>修改
                        </a>
                        <a href="javascript:;" title="删除" ms-click="##deleteProductFn(item);">
                            <i class="icon-trash"></i>删除
                        </a>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="10">
                        <div id="divPager"></div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section foot{
    <script type="text/javascript" src="/Static/Js/Business/Products/List.js"></script>
    <script type="text/javascript" src="~/Static/Js/laypage1.2/laypage.js"></script>
}

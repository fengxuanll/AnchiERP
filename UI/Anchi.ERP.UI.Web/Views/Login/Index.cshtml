
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link href="/Static/h-ui/css/H-ui.min.css" rel="stylesheet" type="text/css" />
    <link href="/Static/hui.admin/css/H-ui.login.css" rel="stylesheet" type="text/css" />
    <link href="/Static/hui.admin/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/Static/Hui-iconfont/1.0.7/iconfont.css" rel="stylesheet" type="text/css" />
    <title>后台登录 - 安驰ERP</title>
</head>
<body>
    <div class="header"></div>
    <div class="loginWraper">
        <div id="loginform" class="loginBox">
            <form class="form form-horizontal ms-controller" method="post" ms-controller="login">
                <div class="row cl">
                    <label class="form-label col-xs-3">
                        <i class="Hui-iconfont">&#xe60d;</i>
                    </label>
                    <div class="formControls col-xs-8">
                        <input id="txtLoginName" name="LoginName" type="text" placeholder="登录名" class="input-text size-L" ms-duplex="##LoginName" />
                    </div>
                </div>
                <div class="row cl">
                    <label class="form-label col-xs-3">
                        <i class="Hui-iconfont">&#xe60e;</i>
                    </label>
                    <div class="formControls col-xs-8">
                        <input id="txtPassWord" name="PassWord" type="password" placeholder="密码" class="input-text size-L" ms-duplex="##PassWord" />
                    </div>
                </div>
                <div class="row cl" style="line-height: 1.5em;">
                    <div class="formControls col-xs-8 col-xs-offset-3"></div>
                </div>
                <div class="row cl">
                    <div class="formControls col-xs-8 col-xs-offset-3">
                        <input type="submit" onclick="return LoginFn();" class="btn btn-success radius size-L" value="&nbsp;登&nbsp;&nbsp;&nbsp;&nbsp;录&nbsp;">&nbsp;
                        <input type="reset" class="btn btn-default radius size-L" style="margin-left: 10px;" value="&nbsp;取&nbsp;&nbsp;&nbsp;&nbsp;消&nbsp;">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="footer">Copyright 安驰 by H-ui.admin.v2.5</div>
    <script type="text/javascript" src="/Static/Js/jquery1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="/Static/Js/avalon2.1.5/avalon.min.js"></script>
    <script type="text/javascript" src="/Static/Js/layer2.4/layer.js"></script>
    <script type="text/javascript" src="/Static/h-ui/js/H-ui.js"></script>
    <script type="text/javascript" src="/Static/js/Common.js"></script>
    <script type="text/javascript">
        var $vm = avalon.define({
            $id: "login",
            LoginName: "",
            PassWord: ""
        });

        $(function () {
            $("#txtLoginName").focus();
        });

        function LoginFn() {
            if ($vm.LoginName.trim() == "") {
                $.alert("请输入用户名", "error");
                return false;
            }
            if ($vm.PassWord.trim() == "") {
                $.alert("请输入密码", "error");
                return false;
            }

            $.ajax({
                url: "/Login",
                type: "POST",
                data: $vm.$model,
                success: function () {
                    location.href = "/";
                }
            });

            return false;
        }
    </script>
</body>
</html>

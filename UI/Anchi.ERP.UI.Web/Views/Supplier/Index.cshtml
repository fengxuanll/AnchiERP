@{
    ViewBag.Title = "供应商管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="breadcrumb">
    <i class="icon-home"></i> 首页<span class="c-gray en">&gt;</span>系统资料<span class="c-gray en">&gt;</span>供应商管理
    <a class="btn radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新">
        <i class="icon-refresh"></i>
    </a>
</nav>

<div class="page-container ms-controller" ms-controller="SupplierList">
    <div class="pd-5 search-bar">
        <form>
            <input type="text" ms-duplex="##Search.CompanyName" class="input-text" placeholder="公司名称" />
            <input type="text" ms-duplex="##Search.Contact" class="input-text ml-5" placeholder="联系人" />
            <button type="submit" onclick="refreshListFn(); return false;" class="btn btn_normal ml-5">
                <i class="icon-search"></i> 搜索
            </button>
        </form>
    </div>
    <div class="cl pd-5">
        <span class="l">
            <a href="javascript:;" class="btn" onclick="addSupplierFn();">
                <i class="icon-plus"></i> 新增
            </a>
            <a href="javascript:;" class="btn" onclick="deleteSelectedRowFn();">
                <i class="icon-trash"></i> 删除
            </a>
        </span>
    </div>

    <div class="cl pd-5">
        <table class="table table-border table-bordered table-bg">
            <thead>
                <tr class="text-c">
                    <th width="25">
                        <input type="checkbox" name="checkAll">
                    </th>
                    <th width="20">序号</th>
                    <th width="90">公司名称</th>
                    <th width="90">联系人</th>
                    <th width="90">联系电话</th>
                    <th width="150">地址</th>
                    <th width="150">备注</th>
                    <th width="100">操作</th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-c" ms-for="($index, item) in ##List">
                    <td>
                        <input type="checkbox" class="row-check" ms-attr="{value:item.Id}" />
                    </td>
                    <td>{{ $index + 1}}</td>
                    <td>{{ item.CompanyName }}</td>
                    <td>{{ item.Contact }}</td>
                    <td>{{ item.Tel }}</td>
                    <td>{{ item.Address }}</td>
                    <td>{{ item.Remark }}</td>
                    <td class="td-manage">
                        <a href="javascript:;" title="修改" ms-click="##editSupplierFn(item);">
                            <i class="icon-edit"></i>修改
                        </a>
                        <a href="javascript:;" title="删除" ms-click="##deleteSupplierFn(item);">
                            <i class="icon-trash"></i>删除
                        </a>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="8">
                        <div id="divPager"></div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section foot{
    <script type="text/javascript" src="/Static/Js/Business/Suppliers/List.js"></script>
    <script type="text/javascript" src="/Static/Js/laypage1.2/laypage.js"></script>
}
@{
    ViewBag.Title = "选择维修项目";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <table class="table table-border table-bordered table-bg ms-controller" ms-controller="ProjectList">
        <thead>
            <tr class="text-c">
                <th width="30">序号</th>
                <th>编码</th>
                <th>名称</th>
                <th>单价</th>
                <th width="40">操作</th>
            </tr>
        </thead>
        <tbody>
            <tr class="text-c" ms-for="($index, item) in ##List">
                <td>{{ $index + 1 }}</td>
                <td>{{ item.Code }}</td>
                <td>{{ item.Name }}</td>
                <td>{{ item.UnitPrice }}</td>
                <td>
                    <a href="javascript:void(0);" ms-click="##selectRepairProjectFn(item);">选择</a>
                </td>
            </tr>
        </tbody>
    </table>
    <div id="divPager" class="mt-10"></div>
</div>

@section foot{
    <script type="text/javascript" src="/Static/Js/laypage1.2/laypage.js"></script>
}

<script type="text/javascript">
    var $vm = avalon.define({
        $id: "ProjectList",
        List: [],
        selectRepairProjectFn: function (item) {
            parent.addRepairProjectFn(item);
            layer_close();
        }
    });

    function refreshListFn(pageIndex) {
        $.ajax({
            url: "/Project/List",
            type: "POST",
            data: {
                PageIndex: pageIndex || 0,
                PageSize: 10
            },
            success: function (data) {
                $vm.List = data.Data;
                laypage({
                    cont: 'divPager', //容器。值支持id名、原生dom对象，jquery对象,
                    curr: data.PageIndex + 1,
                    pages: data.TotalPage, //总页数
                    groups: 3, //连续分数数0
                    skip: true, //不显示上一页
                    jump: function (obj, first) {
                        if (!first) {
                            refreshListFn(obj.curr - 1);
                        }
                    }
                });
            }
        });
    }

    $(function () {
        refreshListFn();
    });
</script>
